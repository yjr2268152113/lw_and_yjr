/* pages/focus/focus.wxss */
page{
  width: 100%;
  height: 100%;
}
.user {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: left;
  font-size: 39rpx;
}
.user .photo {
  position: absolute;
  left: 30rpx;
  top: 15rpx;
}
.user .tap{
  position: absolute;
  right:30rpx;
  top:34rpx;
  width: 16rpx;
  height: 16rpx;
  border-top:4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.user .photo image {
  width: 61rpx;
  height: 61rpx;
  border-radius: 50%;
}
.user .text {
  position: absolute;
  left: 120rpx;
  top: 0rpx;
}
.tip {
  width: 100%;
  height: 100rpx;
  color: black;
  text-align: center;
  margin-top: 20rpx;
  background-color: white;
  opacity: 0.5;
}